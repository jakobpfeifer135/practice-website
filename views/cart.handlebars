<body class="bg-pink-100">

    <!-- Header and navigation -->
    <nav class="bg-black p-4 text-white">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-4xl font-bold">Southern Maid Donuts</a>
            <div class="text-3xl">

                <a href="/" class="mx-2">Home</a>
                <a href="#" class="mx-2">Products</a>
                <a href="#" class="mx-2">Contact</a>
                <a href="/cart" class="mx-2">Cart</a>

            </div>
        </div>
    </nav>

    <!-- Shopping Cart Section -->
    <section class="container mx-auto mt-8 p-8 bg-white rounded shadow-md">
        <h2 class="text-4xl font-sans mb-4">Your Shopping Cart</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Sample Cart Item -->
            <div class="bg-pink-300 p-4 rounded-md shadow-md">
                <div class="flex justify-between items-center">
                    <img src="/images/Strawberry-Cream-Filled-Doughnuts.jpg" alt="Product Image" class="w-20 h-20 object-cover rounded">
                    <div class="ml-4">
                        <h3 class="text-xl font-bold font-sans mb-2">Strawberry-Delight</h3>
                        <p class="text-lg font-sans text-black">Fresh strawberry glaze atop a fluffy donut, a fruity delight.</p>
                    </div>
                </div>
                <div class="mt-4 flex justify-between items-center">
                    <div class="flex items-center">
                        <button class="text-black text-3xl px-2 focus:outline-none font-bold">-</button>
                        <span class="text-xl font-bold mx-2">1</span>
                        <button class="text-black text-2xl px-2 focus:outline-none font-bold">+</button>
                    </div>
                    <p class="text-2xl font-bold text-[#4D767A]">$19.99</p>
                </div>
                <div class="mt-4 flex justify-end">
                    <button class="text-pink-500 hover:underline focus:outline-none">Remove</button>
                </div>
            </div>
            <!-- Add more cart items as needed -->
        </div>
        <p class="text-2xl font-bold mt-8">Total: $<span id="cart-total">19.99</span></p>
        <div class="mt-8 flex justify-end">
            <button class="bg-pink-500 text-white px-6 py-3 rounded-full">Proceed to Checkout</button>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-black p-4 text-white mt-8">
        <div class="container mx-auto text-center">
            <p>&copy; 2023 Your Store</p>
        </div>
    </footer>

    <script src="/javascript/shoppingCart.js" defer></script>
</body>
